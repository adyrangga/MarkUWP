    d:DesignHeight="500"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <Grid Background="Gray">
        <Grid.RowDefinitions>

            <RowDefinition Height="auto" />

            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <RelativePanel>

